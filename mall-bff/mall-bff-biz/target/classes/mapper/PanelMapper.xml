<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.noinch.mall.biz.bff.dao.mapper.PanelMapper">

    <!-- 查询所有板块记录 -->
    <select id="listAllPanel" resultType="com.noinch.mall.biz.bff.dao.entity.PanelDO">
        select *
        from panel_test
        where del_flag = '0'
          and position = 0
        order by sort_order
    </select>

    <select id="getRecommend" resultType="com.noinch.mall.biz.bff.dao.entity.PanelDO">
        select *
        from panel_test
        where del_flag = '0'
          and position = 1
    </select>
</mapper>